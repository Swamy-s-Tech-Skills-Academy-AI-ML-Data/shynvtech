                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2.5"
                    stroke="currentColor" class="w-6 h-6 text-white">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 19.5 8.25 12l7.5-7.5" />
                </svg>
            </button>
            <button id="next-btn"
                class="absolute top-1/2 right-6 -translate-y-1/2 bg-black bg-opacity-50 rounded-full p-4 shadow-lg focus:outline-none hover:bg-opacity-70 transition-all z-30 hover:shadow-xl border border-white">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2.5"
                    stroke="currentColor" class="w-6 h-6 text-white">
