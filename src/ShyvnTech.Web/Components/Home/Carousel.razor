@namespace ShyvnTech.Web.Components.Home
@inject IJSRuntime JSRuntime

<div class="py-12 bg-gray-50">
    <div class="container mx-auto px-4">
        <h2 class="text-3xl font-bold text-center text-gray-800 mb-8">Featured Content</h2>

        <div class="relative">
            <!-- Carousel Track -->
            <div class="overflow-hidden">
                <div id="carousel-track" class="flex transition-transform duration-500 ease-in-out">
                    <!-- Carousel Item 1 -->
                    <div class="w-full md:w-1/3 flex-shrink-0 px-4">
                        <div class="bg-white rounded-xl shadow-md overflow-hidden h-full">
                            <div class="h-48 bg-gradient-to-r from-blue-500 to-indigo-600"></div>
                            <div class="p-6">
                                <div class="text-blue-600 text-sm font-semibold mb-1">COURSE</div>
                                <h3 class="font-bold text-xl mb-2">Introduction to AI Development</h3>
                                <p class="text-gray-600 mb-4">Learn the fundamentals of AI development with hands-on
                                    projects and expert guidance.</p>
                                <div class="flex items-center">
                                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                                        stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-blue-500 mr-1">
                                        <path stroke-linecap="round" stroke-linejoin="round"
                                            d="M12 6v6h4.5m4.5 0a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
                                    </svg>
                                    <span class="text-sm text-gray-500">8 weeks • Beginner</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Carousel Item 2 -->
                    <div class="w-full md:w-1/3 flex-shrink-0 px-4">
                        <div class="bg-white rounded-xl shadow-md overflow-hidden h-full">
                            <div class="h-48 bg-gradient-to-r from-purple-500 to-pink-500"></div>
                            <div class="p-6">
                                <div class="text-purple-600 text-sm font-semibold mb-1">EVENT</div>
                                <h3 class="font-bold text-xl mb-2">Tech Summit 2025</h3>
                                <p class="text-gray-600 mb-4">Join industry leaders for a two-day summit exploring
                                    emerging technologies and future trends.</p>
                                <div class="flex items-center">
                                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                                        stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-purple-500 mr-1">
                                        <path stroke-linecap="round" stroke-linejoin="round"
                                            d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 0 1 2.25-2.25h13.5A2.25 2.25 0 0 1 21 7.5v11.25m-18 0A2.25 2.25 0 0 0 5.25 21h13.5A2.25 2.25 0 0 0 21 18.75m-18 0v-7.5A2.25 2.25 0 0 1 5.25 9h13.5A2.25 2.25 0 0 1 21 11.25v7.5" />
                                    </svg>
                                    <span class="text-sm text-gray-500">July 15-16, 2025 • Virtual</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Carousel Item 3 -->
                    <div class="w-full md:w-1/3 flex-shrink-0 px-4">
                        <div class="bg-white rounded-xl shadow-md overflow-hidden h-full">
                            <div class="h-48 bg-gradient-to-r from-green-500 to-emerald-500"></div>
                            <div class="p-6">
                                <div class="text-green-600 text-sm font-semibold mb-1">ARTICLE</div>
                                <h3 class="font-bold text-xl mb-2">Building Sustainable Tech Solutions</h3>
                                <p class="text-gray-600 mb-4">Explore how technology can be leveraged to create
                                    sustainable solutions for global challenges.</p>
                                <div class="flex items-center">
                                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                                        stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-green-500 mr-1">
                                        <path stroke-linecap="round" stroke-linejoin="round"
                                            d="M12 7.5h1.5m-1.5 3h1.5m-7.5 3h7.5m-7.5 3h7.5m3-9h3.375c.621 0 1.125.504 1.125 1.125V18a2.25 2.25 0 0 1-2.25 2.25M16.5 7.5V18a2.25 2.25 0 0 0 2.25 2.25M16.5 7.5V4.875c0-.621-.504-1.125-1.125-1.125H4.125C3.504 3.75 3 4.254 3 4.875V18a2.25 2.25 0 0 0 2.25 2.25h13.5M6 7.5h3v3H6v-3Z" />
                                    </svg>
                                    <span class="text-sm text-gray-500">10 min read • June 18, 2025</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Navigation Arrows -->
            <button id="prev-btn"
                class="absolute top-1/2 left-2 -translate-y-1/2 bg-white bg-opacity-80 rounded-full p-2 shadow-md focus:outline-none hover:bg-opacity-100 transition-all">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2"
                    stroke="currentColor" class="w-6 h-6 text-gray-700">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 19.5 8.25 12l7.5-7.5" />
                </svg>
            </button>
            <button id="next-btn"
                class="absolute top-1/2 right-2 -translate-y-1/2 bg-white bg-opacity-80 rounded-full p-2 shadow-md focus:outline-none hover:bg-opacity-100 transition-all">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2"
                    stroke="currentColor" class="w-6 h-6 text-gray-700">
                    <path stroke-linecap="round" stroke-linejoin="round" d="m8.25 4.5 7.5 7.5-7.5 7.5" />
                </svg>
            </button>

            <!-- Indicator Dots -->
            <div class="flex justify-center mt-6">
                <button class="w-3 h-3 rounded-full bg-blue-600 mx-1"></button>
                <button class="w-3 h-3 rounded-full bg-gray-300 mx-1 hover:bg-gray-400"></button>
                <button class="w-3 h-3 rounded-full bg-gray-300 mx-1 hover:bg-gray-400"></button>
            </div>
        </div>
    </div>
</div>

@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            // First, dynamically load the script
            await JSRuntime.InvokeVoidAsync("eval", @"
if (!window.carouselScriptLoaded) {
window.carouselScriptLoaded = true;
const script = document.createElement('script');
script.src = '/js/carousel.js';
script.onload = function() {
if (typeof initCarousel === 'function') {
initCarousel();
}
};
document.head.appendChild(script);
} else if (typeof initCarousel === 'function') {
initCarousel();
}
");
        }
    }
}

                                   
                                       
                                           
                                   
                                       
                                           
                                   
                                       
                                           
               
                   
               
                   