@namespace ShyvnTech.Web.Components.Home

<div class="carousel-container">
    <div class="container mx-auto px-4">
        <h2 class="text-3xl md:text-4xl font-bold text-center text-gray-800 mb-12">
            Featured Content
        </h2>

        <div class="carousel-wrapper">
            <!-- Carousel Track Container -->
            <div class="carousel-track-container">
                <div id="carousel-track" class="carousel-track">
                    <!-- Carousel Items using CarouselItem component -->
                    <CarouselItem Title="Featured Course" Label="COURSE" Heading="Introduction to AI Development"
                        Description="Learn the fundamentals of AI development with hands-on projects and expert guidance."
                        Duration="8 weeks" Level="Beginner"
                        GradientClass="bg-gradient-to-br from-blue-500 to-indigo-600"
                        HighlightColorClass="text-blue-600" />

                    <CarouselItem Title="Featured Workshop" Label="WORKSHOP"
                        Heading="Building Cloud-Native Applications"
                        Description="Learn modern cloud architecture and deployment practices with Azure and containerization."
                        Duration="3 weeks" Level="Intermediate"
                        GradientClass="bg-gradient-to-br from-indigo-500 to-purple-600"
                        HighlightColorClass="text-indigo-600" />

                    <CarouselItem Title="Featured Certification" Label="CERTIFICATION"
                        Heading="Advanced Data Engineering"
                        Description="Master data pipelines, ETL processes, and big data analytics with industry-standard tools."
                        Duration="12 weeks" Level="Advanced" GradientClass="bg-gradient-to-br from-sky-500 to-cyan-500"
                        HighlightColorClass="text-sky-600" />
                </div>
            </div>

            <!-- Navigation Arrows -->
            <button id="prev-btn" class="carousel-nav-btn carousel-nav-prev" aria-label="Previous slide">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2.5"
                    stroke="currentColor" class="w-6 h-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 19.5L8.25 12l7.5-7.5" />
                </svg>
            </button>

            <button id="next-btn" class="carousel-nav-btn carousel-nav-next" aria-label="Next slide">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2.5"
                    stroke="currentColor" class="w-6 h-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="m8.25 4.5 7.5 7.5-7.5 7.5" />
                </svg>
            </button>

            <!-- Indicator Dots -->
            <div class="carousel-indicators">
                <button class="carousel-indicator active" data-slide="0" aria-label="Go to slide 1"></button>
                <button class="carousel-indicator inactive" data-slide="1" aria-label="Go to slide 2"></button>
                <button class="carousel-indicator inactive" data-slide="2" aria-label="Go to slide 3"></button>
            </div>
        </div>
    </div>
</div>

@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            // Initialize carousel when component is first rendered
            await JSRuntime.InvokeVoidAsync("initCarousel");
        }
    }

    [Inject]
    private IJSRuntime JSRuntime { get; set; } = default!;
}
