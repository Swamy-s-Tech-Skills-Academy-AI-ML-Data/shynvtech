@namespace ShyvnTech.Web.Components.Home

<div class="w-full flex-shrink-0 px-4 py-2 snap-start md:w-1/3">
    <div
        class="rounded-xl overflow-hidden h-full bg-white shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1">
        <div class="h-20 @HeaderGradient flex items-center">
            <div class="ml-6 text-white font-bold text-xl">@Title</div>
        </div>
        <div class="p-6">
            <div class="@LabelColor text-sm font-semibold mb-1 uppercase tracking-wide">@Label</div>
            <h3 class="font-bold text-xl mb-2 text-gray-900 group-hover:text-gray-700 transition-colors duration-300">
                @Heading</h3>
            <p class="text-gray-600 mb-4 leading-relaxed">@Description</p>
            <div class="flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                    stroke="currentColor" class="w-5 h-5 mr-2 @IconColor">
                    <path stroke-linecap="round" stroke-linejoin="round"
                        d="M12 6v6h4.5m4.5 0a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
                </svg>
                <span class="text-sm text-gray-500">@Duration • @Level</span>
            </div>
            @if (!string.IsNullOrEmpty(ActionText))
            {
                <div class="mt-4">
                    <button class="text-sm @LabelColor font-semibold hover:underline transition-all duration-300">
                        @ActionText →
                    </button>
                </div>
            }
        </div>
    </div>
</div>

@code {
    [Parameter] public string Title { get; set; } = "";
    [Parameter] public string Label { get; set; } = "";
    [Parameter] public string Heading { get; set; } = "";
    [Parameter] public string Description { get; set; } = "";
    [Parameter] public string Duration { get; set; } = "";
    [Parameter] public string Level { get; set; } = "";
    [Parameter] public string ActionText { get; set; } = "";
    [Parameter] public string HeaderGradient { get; set; } = "bg-gradient-to-r from-blue-600 to-indigo-600";
    [Parameter] public string LabelColor { get; set; } = "text-blue-600";
    [Parameter] public string IconColor { get; set; } = "text-blue-600";
}

       
                