@namespace ShyvnTech.Web.Components.Home

<div class="px-4 shadow-lg mx-4 md:mx-8 lg:mx-12 rounded-2xl"
    style="margin-top: 60px; padding-top: 30px; padding-bottom: 30px; background: linear-gradient(135deg, #7dd3fc, #93c5fd, #a5b4fc);">
    <div class="container mx-auto max-w-5xl">
        <div class="text-center mb-12">
            <div class="inline-flex items-center justify-center px-6 py-3 rounded-2xl text-sm font-bold mb-6 relative">
                <div
                    class="absolute inset-0 bg-gradient-to-r from-blue-600 to-indigo-600 opacity-90 blur-sm rounded-2xl">
                </div>
                <div
                    class="absolute inset-0 bg-gradient-to-r from-blue-600 to-indigo-600 rounded-2xl border border-white/20">
                </div>
                <span class="flex items-center justify-center gap-3 relative z-10 px-6 py-2">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor"
                        class="w-5 h-5 text-white">
                        <path fill-rule="evenodd"
                            d="M2.25 6a3 3 0 0 1 3-3h13.5a3 3 0 0 1 3 3v12a3 3 0 0 1-3 3H5.25a3 3 0 0 1-3-3V6Zm3.97.97a.75.75 0 0 1 1.06 0l2.25 2.25a.75.75 0 0 1 0 1.06l-2.25 2.25a.75.75 0 0 1-1.06-1.06l.97-.97H5.25a.75.75 0 0 1 0-1.5h1.97l-.97-.97a.75.75 0 0 1 0-1.06Zm10.56 0a.75.75 0 0 1 0 1.06l-.97.97h1.97a.75.75 0 0 1 0 1.5h-1.97l.97.97a.75.75 0 1 1-1.06 1.06l-2.25-2.25a.75.75 0 0 1 0-1.06l2.25-2.25a.75.75 0 0 1 1.06 0Z"
                            clip-rule="evenodd" />
                    </svg>
                    <span class="text-white font-bold tracking-wide">Next-Gen Tech Education Platform</span>
                </span>
            </div>
            <h1 class="text-4xl md:text-6xl font-bold mb-6">
                <span class="text-gray-800">Shape Tomorrow's</span>
                <span class="text-blue-700 font-extrabold">Digital Leaders</span>
            </h1>
            <p class="text-gray-700 max-w-3xl mx-auto text-lg md:text-xl mb-10">
                Join the most innovative TechEd community where students, professionals, and
                industry experts collaborate to build cutting-edge solutions and accelerate
                careers in technology.
            </p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
                <a href="/learning"
                    class="bg-gradient-to-r from-blue-600 to-sky-500 text-white font-semibold py-2 px-5 rounded-md transition-all duration-300 hover:shadow-lg hover:shadow-blue-200/50 flex items-center justify-center">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                        stroke="currentColor" class="w-5 h-5 mr-2">
                        <path stroke-linecap="round" stroke-linejoin="round"
                            d="M5.25 5.653c0-.856.917-1.398 1.667-.986l11.54 6.347a1.125 1.125 0 0 1 0 1.972l-11.54 6.347a1.125 1.125 0 0 1-1.667-.986V5.653Z" />
                    </svg>
                    Start Learning
                </a>
                <a href="/events"
                    class="border-2 border-sky-300 text-blue-700 bg-white/50 hover:bg-sky-50 font-semibold py-2 px-5 rounded-md transition-all duration-300 hover:border-blue-500 flex items-center justify-center">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                        stroke="currentColor" class="w-5 h-5 mr-2">
                        <path stroke-linecap="round" stroke-linejoin="round"
                            d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 0 1 2.25-2.25h13.5A2.25 2.25 0 0 1 21 7.5v11.25m-18 0A2.25 2.25 0 0 0 5.25 21h13.5A2.25 2.25 0 0 0 21 18.75m-18 0v-7.5A2.25 2.25 0 0 1 5.25 9h13.5A2.25 2.25 0 0 1 21 11.25v7.5" />
                    </svg>
                    Explore Events
                </a>
            </div>
        </div>
    </div>
</div>
