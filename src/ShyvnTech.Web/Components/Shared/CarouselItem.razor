@namespace ShyvnTech.Web.Components.Shared

<div class="carousel-item">
    <div class="carousel-card @AdditionalCardClasses">
        <div class="carousel-header @GradientClass">
            <div class="ml-6 text-white font-bold text-xl">@Title</div>
        </div>
        <div class="p-6">
            <div class="@HighlightColorClass text-sm font-semibold mb-1 uppercase tracking-wide">@Label</div>
            <h3 class="font-bold text-xl mb-2 text-gray-900">@Heading</h3>
            <p class="text-gray-600 mb-4 leading-relaxed">@Description</p>
            <div class="flex items-center">
                @if (ShowDuration)
                {
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                        stroke="currentColor" class="w-5 h-5 mr-1 @HighlightColorClass">
                        <path stroke-linecap="round" stroke-linejoin="round"
                            d="M12 6v6h4.5m4.5 0a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
                    </svg>
                    <span class="text-sm text-gray-500">@Duration â€¢ @Level</span>
                }
                else if (!string.IsNullOrEmpty(CustomFooter))
                {
                    <span class="text-sm text-gray-500">@CustomFooter</span>
                }
            </div>
            @if (ChildContent != null)
            {
                <div class="mt-4">
                    @ChildContent
                </div>
            }
        </div>
    </div>
</div>

@code {
    [Parameter] public string Title { get; set; } = "";
    [Parameter] public string Label { get; set; } = "";
    [Parameter] public string Heading { get; set; } = "";
    [Parameter] public string Description { get; set; } = "";
    [Parameter] public string Duration { get; set; } = "";
    [Parameter] public string Level { get; set; } = "";
    [Parameter] public string CustomFooter { get; set; } = "";
    [Parameter] public string GradientClass { get; set; } = "bg-gradient-to-br from-blue-500 to-purple-600";
    [Parameter] public string HighlightColorClass { get; set; } = "text-blue-600";
    [Parameter] public string AdditionalCardClasses { get; set; } = "";
    [Parameter] public bool ShowDuration { get; set; } = true;
    [Parameter] public RenderFragment? ChildContent { get; set; }
}
