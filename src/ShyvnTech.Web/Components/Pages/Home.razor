@page "/"

<section class="bg-gradient-to-br from-gray-50 to-blue-50 py-20 px-4 mt-[120px]" style="margin-top: 120px;" id="home">
    <div class="container mx-auto max-w-6xl">
        <div class="text-center space-y-8">
            <!-- Hero Badge -->
            <div
                class="inline-flex items-center gap-2 bg-blue-100 text-blue-700 px-4 py-2 rounded-full text-sm font-medium">
                <i class="fas fa-rocket text-blue-600"></i>
                Next-Gen Tech Education Platform
            </div>

            <!-- Hero Title -->
            <h1 class="text-5xl md:text-6xl font-bold text-gray-900 leading-tight">
                Shape Tomorrow's
                <span class="text-blue-600">Digital Leaders</span>
            </h1>

            <!-- Hero Description -->
            <p class="text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
                Join the most innovative TechEd community where students, professionals, and industry experts
                collaborate to build cutting-edge solutions and accelerate careers in technology.
            </p>

            <!-- Hero Actions -->
            <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
                <button
                    class="bg-blue-600 hover:bg-blue-700 text-white font-semibold px-8 py-4 rounded-lg transition-colors duration-200 flex items-center gap-2">
                    <i class="fas fa-play"></i>
                    Start Learning
                </button>
                <button
                    class="bg-gray-100 hover:bg-gray-200 text-gray-700 font-semibold px-8 py-4 rounded-lg transition-colors duration-200 flex items-center gap-2">
                    <i class="fas fa-calendar"></i>
                    Explore Events
                </button>
            </div>
        </div>
    </div>
</section>