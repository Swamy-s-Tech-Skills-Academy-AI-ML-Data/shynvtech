@page "/"

<section id="home" class="hero-gradient-bg py-10 px-4 mt-10">
    <div class="max-w-7xl mx-auto">
        <div class="text-center animate-fade-in">
            <!-- Hero Badge -->
            <div
                class="inline-flex items-center gap-2 bg-blue-100 text-blue-700 px-4 py-2 rounded-full text-sm font-medium shadow-sm mb-10">
                <i class="fas fa-rocket text-blue-600"></i>
                Next-Gen Tech Education Platform
            </div>

            <!-- Hero Title -->
            <h1 class="text-5xl md:text-6xl font-bold text-gray-900 leading-tight mb-8">
                Shape Tomorrow's
                <span class="text-gradient">Digital Leaders</span>
            </h1>

            <!-- Hero Description -->
            <p class="text-xl text-gray-600 max-w-3xl mx-auto mb-10 leading-relaxed">
                Join the most innovative TechEd community where students, professionals, and industry experts
                collaborate to build cutting-edge solutions and accelerate careers in technology.
            </p>

            <!-- Hero Actions -->
            <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
                <button class="btn-gradient px-8 py-4 rounded-lg shadow-lg">
                    <i class="fas fa-play mr-2"></i>
                    Start Learning
                </button>
                <button class="btn-gradient btn-gradient-night px-8 py-4 rounded-lg shadow-lg">
                    <i class="fas fa-users mr-2"></i>
                    Join Community
                </button>
                <button
                    class="bg-white hover:bg-gray-50 text-gray-700 font-semibold px-8 py-4 rounded-lg border border-gray-200 shadow flex items-center gap-2 transition-all duration-300">
                    <i class="fas fa-calendar"></i>
                    Explore Events
                </button>
            </div>
        </div>
    </div>
</section>