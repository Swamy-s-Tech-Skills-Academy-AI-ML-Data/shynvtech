@page "/"

<!-- Hero Section -->
<section class="relative min-h-screen bg-gradient-to-br from-blue-50 via-indigo-50 to-cyan-50 flex items-center">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 pt-20">
        <div class="grid lg:grid-cols-2 gap-12 items-center">
            <!-- Hero Content -->
            <div class="space-y-8">
                <div class="space-y-6">
                    <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-gray-900 leading-tight">
                        Welcome to
                        <span class="bg-gradient-to-r from-blue-600 to-cyan-600 bg-clip-text text-transparent">
                            ShyvnTech
                        </span>
                    </h1>
                    <p class="text-xl text-gray-600 leading-relaxed max-w-2xl">
                        A Collaborative Hub for Tomorrow's Tech Leaders. Designed for students, professionals,
                        and tech enthusiasts, ShyvnTech empowers the future of technology through innovation,
                        community, and lifelong learning.
                    </p>
                </div>

                <div class="flex flex-col sm:flex-row gap-4">
                    <button
                        class="bg-gradient-to-r from-blue-600 to-cyan-600 hover:from-blue-700 hover:to-cyan-700 text-white px-8 py-4 rounded-xl font-semibold text-lg transition-all duration-300 transform hover:scale-105 shadow-lg">
                        <i class="fas fa-rocket mr-3"></i>
                        Explore Our Platform
                    </button>
                    <button
                        class="border-2 border-blue-600 text-blue-600 hover:bg-blue-600 hover:text-white px-8 py-4 rounded-xl font-semibold text-lg transition-all duration-300">
                        <i class="fas fa-play mr-3"></i>
                        Watch Demo
                    </button>
                </div>

                <!-- Stats -->
                <div class="grid grid-cols-3 gap-6 pt-8">
                    <div class="text-center">
                        <div class="text-3xl font-bold text-blue-600">10K+</div>
                        <div class="text-gray-600 text-sm">Active Members</div>
                    </div>
                    <div class="text-center">
                        <div class="text-3xl font-bold text-cyan-600">500+</div>
                        <div class="text-gray-600 text-sm">Tech Articles</div>
                    </div>
                    <div class="text-center">
                        <div class="text-3xl font-bold text-indigo-600">50+</div>
                        <div class="text-gray-600 text-sm">Live Events</div>
                    </div>
                </div>
            </div>

            <!-- Hero Visual -->
            <div class="relative">
                <div class="relative z-10">
                    <div
                        class="bg-gradient-to-br from-white to-blue-50 rounded-2xl shadow-2xl p-8 border border-blue-100">
                        <div class="space-y-6">
                            <div class="flex items-center gap-4">
                                <div
                                    class="w-12 h-12 bg-gradient-to-br from-blue-600 to-cyan-600 rounded-xl flex items-center justify-center">
                                    <i class="fas fa-code text-white text-xl"></i>
                                </div>
                                <div>
                                    <h3 class="font-semibold text-gray-900">Latest Tech Insights</h3>
                                    <p class="text-gray-600 text-sm">Stay updated with cutting-edge trends</p>
                                </div>
                            </div>
                            <div class="grid grid-cols-2 gap-4">
                                <div
                                    class="bg-gradient-to-br from-green-50 to-emerald-50 p-4 rounded-xl border border-green-100">
                                    <i class="fas fa-brain text-2xl text-green-600 mb-2"></i>
                                    <div class="text-sm font-medium text-gray-900">AI & ML</div>
                                </div>
                                <div
                                    class="bg-gradient-to-br from-purple-50 to-violet-50 p-4 rounded-xl border border-purple-100">
                                    <i class="fas fa-shield-alt text-2xl text-purple-600 mb-2"></i>
                                    <div class="text-sm font-medium text-gray-900">Cybersecurity</div>
                                </div>
                                <div
                                    class="bg-gradient-to-br from-orange-50 to-red-50 p-4 rounded-xl border border-orange-100">
                                    <i class="fas fa-code-branch text-2xl text-orange-600 mb-2"></i>
                                    <div class="text-sm font-medium text-gray-900">Open Source</div>
                                </div>
                                <div
                                    class="bg-gradient-to-br from-cyan-50 to-blue-50 p-4 rounded-xl border border-cyan-100">
                                    <i class="fas fa-rocket text-2xl text-cyan-600 mb-2"></i>
                                    <div class="text-sm font-medium text-gray-900">Innovation</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Decorative elements -->
                <div
                    class="absolute -top-4 -right-4 w-24 h-24 bg-gradient-to-br from-blue-400 to-cyan-400 rounded-full opacity-20 animate-pulse">
                </div>
                <div
                    class="absolute -bottom-4 -left-4 w-32 h-32 bg-gradient-to-br from-indigo-400 to-purple-400 rounded-full opacity-20 animate-pulse">
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="py-20 bg-white">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
            <h2 class="text-4xl font-bold text-gray-900 mb-4">
                What We <span
                    class="bg-gradient-to-r from-blue-600 to-cyan-600 bg-clip-text text-transparent">Offer</span>
            </h2>
            <p class="text-xl text-gray-600 max-w-3xl mx-auto">
                Discover our comprehensive platform designed to empower tech professionals at every stage of their
                journey
            </p>
        </div>

        <!-- Features Grid -->
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
            <!-- Feature 1 -->
            <div
                class="bg-gradient-to-br from-blue-50 to-cyan-50 rounded-2xl p-6 text-center group hover:transform hover:scale-105 transition-all duration-300">
                <div
                    class="w-16 h-16 bg-gradient-to-br from-blue-500 to-cyan-500 rounded-xl flex items-center justify-center mx-auto mb-4">
                    <i class="fas fa-brain text-white text-2xl"></i>
                </div>
                <h3 class="text-xl font-semibold text-gray-900 mb-2">AI & Machine Learning</h3>
                <p class="text-gray-600">Cutting-edge AI workshops and hands-on ML projects</p>
            </div>

            <!-- Feature 2 -->
            <div
                class="bg-gradient-to-br from-green-50 to-emerald-50 rounded-2xl p-6 text-center group hover:transform hover:scale-105 transition-all duration-300">
                <div
                    class="w-16 h-16 bg-gradient-to-br from-green-500 to-emerald-500 rounded-xl flex items-center justify-center mx-auto mb-4">
                    <i class="fas fa-code-branch text-white text-2xl"></i>
                </div>
                <h3 class="text-xl font-semibold text-gray-900 mb-2">Open Source</h3>
                <p class="text-gray-600">Collaborative development and community projects</p>
            </div>

            <!-- Feature 3 -->
            <div
                class="bg-gradient-to-br from-purple-50 to-violet-50 rounded-2xl p-6 text-center group hover:transform hover:scale-105 transition-all duration-300">
                <div
                    class="w-16 h-16 bg-gradient-to-br from-purple-500 to-violet-500 rounded-xl flex items-center justify-center mx-auto mb-4">
                    <i class="fas fa-shield-alt text-white text-2xl"></i>
                </div>
                <h3 class="text-xl font-semibold text-gray-900 mb-2">Cybersecurity</h3>
                <p class="text-gray-600">Security best practices and ethical tech development</p>
            </div>

            <!-- Feature 4 -->
            <div
                class="bg-gradient-to-br from-orange-50 to-red-50 rounded-2xl p-6 text-center group hover:transform hover:scale-105 transition-all duration-300">
                <div
                    class="w-16 h-16 bg-gradient-to-br from-orange-500 to-red-500 rounded-xl flex items-center justify-center mx-auto mb-4">
                    <i class="fas fa-chart-line text-white text-2xl"></i>
                </div>
                <h3 class="text-xl font-semibold text-gray-900 mb-2">Career Growth</h3>
                <p class="text-gray-600">Professional development and industry connections</p>
            </div>
        </div>
    </div>
</section>

<!-- Call to Action Section -->
<section class="py-20 bg-gradient-to-r from-blue-600 via-purple-600 to-cyan-600">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <div class="max-w-4xl mx-auto space-y-8">
            <h2 class="text-4xl lg:text-5xl font-bold text-white">
                Ready to Start Your Tech Journey?
            </h2>
            <p class="text-xl text-blue-100 leading-relaxed">
                Join our vibrant community of tech innovators, creators, and changemakers.
                Together, we're building the future of technology.
            </p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
                <button
                    class="bg-white text-blue-600 hover:bg-gray-100 px-8 py-4 rounded-xl font-semibold text-lg transition-all duration-300 transform hover:scale-105 shadow-lg">
                    <i class="fas fa-rocket mr-3"></i>
                    Get Started Today
                </button>
                <button
                    class="border-2 border-white text-white hover:bg-white hover:text-blue-600 px-8 py-4 rounded-xl font-semibold text-lg transition-all duration-300">
                    <i class="fas fa-calendar mr-3"></i>
                    View Upcoming Events
                </button>
            </div>
        </div>
    </div>
</section>

<!-- Modern Footer with Gradient Design -->
<footer class="relative bg-gradient-to-br from-slate-900 via-blue-900 to-indigo-900 text-white overflow-hidden">
    <!-- Background Effects -->
    <div class="absolute inset-0 bg-gradient-to-r from-blue-600/10 via-purple-600/10 to-cyan-600/10"></div>
    <div class="absolute inset-0 opacity-5">
        <div class="h-full w-full"
            style="background-image: radial-gradient(circle at 25% 25%, #60a5fa 2px, transparent 2px); background-size: 40px 40px;">
        </div>
    </div>

    <!-- Main Footer Content -->
    <div class="relative z-10 py-16">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8">
            <!-- Copyright -->
            <div class="text-center">
                <p class="text-gray-400 text-sm">
                    © 2025 <span class="text-cyan-400 font-medium">ShyvnTech</span> Tech Innovation Collective. All
                    rights reserved.
                </p>
            </div>
        </div>
    </div>
</footer>