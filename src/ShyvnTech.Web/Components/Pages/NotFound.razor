@page "/404"
@page "/not-found"
@page "/test-404-page"
@namespace ShyvnTech.Web.Components.Pages

<PageTitle>Page Not Found - ShyvnTech</PageTitle>

<div class="min-h-screen bg-gradient-to-br from-gray-50 to-blue-50 flex items-center justify-center px-4">
    <div class="max-w-lg w-full text-center">

        <!-- 404 Animation/Icon -->
        <div class="mb-8">
            <div
                class="text-8xl md:text-9xl font-bold text-transparent bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text animate-pulse">
                404
            </div>
        </div>

        <!-- Error Message -->
        <div class="mb-8">
            <h1 class="text-3xl md:text-4xl font-bold text-gray-800 mb-4">
                Oops! Page Not Found
            </h1>
            <p class="text-lg text-gray-600 mb-6">
                The page you're looking for seems to have wandered off into the digital void.
                Don't worry, even the best explorers sometimes take a wrong turn!
            </p>
        </div>

        <!-- Illustration/Icon -->
        <div class="mb-8 flex justify-center">
            <div class="bg-white rounded-full p-6 shadow-lg">
                <svg class="w-16 h-16 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M9.172 16.172a4 4 0 015.656 0M9 12h6m-3-3v.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
            </div>
        </div>

        <!-- Action Buttons -->
        <div class="space-y-4 md:space-y-0 md:space-x-4 md:flex md:justify-center">
            <a href="/"
                class="inline-flex items-center gap-2 bg-gradient-to-r from-blue-600 to-sky-500 text-white font-semibold py-3 px-6 rounded-md transition-all duration-300 hover:shadow-lg hover:shadow-blue-200/50 transform hover:scale-105">
                <i class="fas fa-home"></i>
                Go Home
            </a>

            <a href="/magazines"
                class="inline-flex items-center gap-2 border-2 border-sky-300 text-blue-700 bg-white/50 hover:bg-sky-50 font-semibold py-3 px-6 rounded-md transition-all duration-300 hover:border-blue-500 transform hover:scale-105">
                <i class="fas fa-book"></i>
                Browse Magazines
            </a>
        </div>

        <!-- Help Text -->
        <div class="mt-8 text-sm text-gray-500">
            <p>
                If you believe this is an error, please
                <a href="/contact" class="text-blue-600 hover:text-blue-800 underline font-medium">
                    contact our support team
                </a>
            </p>
        </div>

    </div>
</div>
