@* Modern Cloud-Style Navbar Component (Blue/Skyblue) *@
<nav class="navbar-glass shadow-md border-b border-blue-100">
    <div class="container-custom flex justify-between items-center h-20 px-4">
        <!-- Logo -->
        <a href="/" class="flex items-center gap-3 focus:outline-none focus:ring-2 focus:ring-blue-500 rounded-xl h-14">
            <div
                class="w-12 h-12 bg-gradient-to-r from-blue-600 to-sky-400 rounded-2xl flex items-center justify-center shadow-lg transform transition-transform hover:scale-105">
                <i class="fas fa-code text-white text-2xl"></i>
            </div>
            <span class="text-2xl font-extrabold text-blue-700 tracking-tight select-none">ShyvnTech</span>
        </a>

        <!-- Desktop Navigation -->
        <div class="hidden md:flex items-center gap-1 lg:gap-4">
            <a href="/" class="nav-link @GetActiveClass("/")">
                <i class="fas fa-home text-base"></i>
                <span class="ml-1">Home</span>
            </a>
            <a href="/magazines" class="nav-link @GetActiveClass("/magazines")">
                <i class="fas fa-book-open text-base"></i>
                <span class="ml-1">Magazines</span>
            </a>
            <a href="/events" class="nav-link @GetActiveClass("/events")">
                <i class="fas fa-calendar text-base"></i>
                <span class="ml-1">Events</span>
            </a>
            <a href="/learning" class="nav-link @GetActiveClass("/learning")">
                <i class="fas fa-graduation-cap text-base"></i>
                <span class="ml-1">Learning</span>
            </a>
            <a href="/about" class="nav-link @GetActiveClass("/about")">
                <i class="fas fa-info-circle text-base"></i>
                <span class="ml-1">About</span>
            </a>
            <a href="/contact" class="nav-link @GetActiveClass("/contact")">
                <i class="fas fa-envelope text-base"></i>
                <span class="ml-1">Contact</span>
            </a>
            <div class="pl-4 flex items-center h-full">
                <button
                    class="bg-gradient-to-r from-blue-600 to-sky-400 px-7 py-3 rounded-full font-bold text-base shadow-lg flex items-center gap-2 text-white focus:outline-none focus:ring-2 focus:ring-blue-400 transition-all hover:shadow-blue-200 hover:shadow-xl hover:scale-105">
                    <i class="fas fa-users"></i>
                    Join Community
                </button>
            </div>
        </div>

        <!-- Mobile Menu Button -->
        <button
            class="md:hidden p-2 rounded-xl hover:bg-blue-50 focus:outline-none focus:ring-2 focus:ring-blue-400 transition-colors duration-300"
            aria-label="Toggle navigation" @onclick="ToggleMobileMenu">
            <i class="fas @(IsMobileMenuOpen ? "fa-times" : "fa-bars") text-blue-600 text-2xl"></i>
        </button>
    </div>

    <!-- Mobile Navigation -->
    <div
        class="md:hidden w-full bg-white border-t border-blue-50 shadow-sm transition-all duration-300 ease-in-out @(IsMobileMenuOpen ? "block" : "hidden")">
        <div class="flex flex-col gap-1 py-4 px-4">
            <a href="/" class="mobile-nav-link @GetActiveClass("/")">
                <i class="fas fa-home text-base"></i>
                <span class="ml-1">Home</span>
            </a>
            <a href="/magazines" class="mobile-nav-link @GetActiveClass("/magazines")">
                <i class="fas fa-book-open text-base"></i>
                <span class="ml-1">Magazines</span>
            </a>
            <a href="/events" class="mobile-nav-link @GetActiveClass("/events")">
                <i class="fas fa-calendar text-base"></i>
                <span class="ml-1">Events</span>
            </a>
            <a href="/learning" class="mobile-nav-link @GetActiveClass("/learning")">
                <i class="fas fa-graduation-cap text-base"></i>
                <span class="ml-1">Learning</span>
            </a>
            <a href="/about" class="mobile-nav-link @GetActiveClass("/about")">
                <i class="fas fa-info-circle text-base"></i>
                <span class="ml-1">About</span>
            </a>
            <a href="/contact" class="mobile-nav-link @GetActiveClass("/contact")">
                <i class="fas fa-envelope text-base"></i>
                <span class="ml-1">Contact</span>
            </a>
            <button
                class="bg-gradient-to-r from-blue-600 to-sky-400 w-full px-7 py-3 rounded-full font-bold text-base shadow-lg mt-2 flex items-center gap-2 justify-center text-white focus:outline-none focus:ring-2 focus:ring-blue-400 transition-all hover:shadow-blue-200">
                <i class="fas fa-users"></i>
                Join Community
            </button>
        </div>
    </div>
</nav>

@code {
    [Inject] private NavigationManager Navigation { get; set; } = default!;

    private bool _isMobileMenuOpen = false;
    private bool IsMobileMenuOpen => _isMobileMenuOpen;

    private string GetActiveClass(string path)
    {
        var currentPath = "/" + Navigation.ToBaseRelativePath(Navigation.Uri);

        // Handle exact match for home page
        if (path == "/" && (string.IsNullOrEmpty(Navigation.ToBaseRelativePath(Navigation.Uri)) || currentPath == "/"))
            return "active";

        // Handle other pages - check if current path starts with the target path
        if (path != "/" && currentPath.StartsWith(path, StringComparison.OrdinalIgnoreCase))
            return "active";

        return "";
    }

    private void ToggleMobileMenu()
    {
        _isMobileMenuOpen = !_isMobileMenuOpen;
    }
}
