@* Modern Navbar Component *@
<nav class="fixed top-0 left-0 right-0 z-50 bg-white/95 navbar-backdrop border-b border-gray-200 shadow-sm">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
            <!-- Logo -->              
            <div class="flex items-center gap-3 navbar-logo">
                <div class="w-10 h-10 bg-gradient-to-br from-blue-600 to-cyan-600 rounded-xl flex items-center justify-center shadow-lg">
                    <i class="fas fa-code text-white text-lg logo-icon"></i>
                </div>
                <span class="text-xl font-bold text-blue-600">
                    ShyvnTech
                </span>
            </div>

            <!-- Desktop Navigation -->
            <div class="hidden md:flex items-center space-x-8">
                <a href="/" class="nav-link @GetActiveClass("/")">
                    <i class="fas fa-home text-sm"></i>
                    <span>Home</span>
                </a>
                <a href="/magazines" class="nav-link @GetActiveClass("/magazines")">
                    <i class="fas fa-book-open text-sm"></i>
                    <span>Magazines</span>
                </a>
                <a href="/events" class="nav-link @GetActiveClass("/events")">
                    <i class="fas fa-calendar text-sm"></i>
                    <span>Events</span>
                </a>
                <a href="/learning" class="nav-link @GetActiveClass("/learning")">
                    <i class="fas fa-graduation-cap text-sm"></i>
                    <span>Learning</span>
                </a>
                <a href="/about" class="nav-link @GetActiveClass("/about")">
                    <i class="fas fa-info-circle text-sm"></i>
                    <span>About</span>
                </a>
                <a href="/contact" class="nav-link @GetActiveClass("/contact")">
                    <i class="fas fa-envelope text-sm"></i>
                    <span>Contact</span>
                </a>
                <button class="btn-primary">
                    <i class="fas fa-users mr-2"></i>
                    Join Community
                </button>
            </div>            <!-- Mobile Menu Button -->
            <button class="md:hidden p-2 rounded-lg hover:bg-gray-100 transition-colors duration-300"
                    aria-label="Toggle navigation"
                    @onclick="ToggleMobileMenu">
                <i class="fas @(IsMobileMenuOpen ? "fa-times" : "fa-bars") text-gray-700 text-lg"></i>
            </button>
        </div>

        <!-- Mobile Navigation -->        <div class="@MobileMenuClass">
            <div class="flex flex-col space-y-1 py-4">
                <a href="/" class="mobile-nav-link @GetActiveClass("/")">
                    <i class="fas fa-home text-sm"></i>
                    <span>Home</span>
                </a>
                <a href="/magazines" class="mobile-nav-link @GetActiveClass("/magazines")">
                    <i class="fas fa-book-open text-sm"></i>
                    <span>Magazines</span>
                </a>
                <a href="/events" class="mobile-nav-link @GetActiveClass("/events")">
                    <i class="fas fa-calendar text-sm"></i>
                    <span>Events</span>
                </a>
                <a href="/learning" class="mobile-nav-link @GetActiveClass("/learning")">
                    <i class="fas fa-graduation-cap text-sm"></i>
                    <span>Learning</span>
                </a>
                <a href="/about" class="mobile-nav-link @GetActiveClass("/about")">
                    <i class="fas fa-info-circle text-sm"></i>
                    <span>About</span>
                </a>
                <a href="/contact" class="mobile-nav-link @GetActiveClass("/contact")">
                    <i class="fas fa-envelope text-sm"></i>
                    <span>Contact</span>
                </a>
                <div class="px-4 py-2">
                    <button class="w-full btn-primary">
                        <i class="fas fa-users mr-2"></i>
                        Join Community
                    </button>
                </div>
            </div>
        </div>
    </div>
</nav>

@code {
    [Inject] private NavigationManager Navigation { get; set; } = default!;

    private bool _isMobileMenuOpen = false;

    private bool IsMobileMenuOpen => _isMobileMenuOpen;

    private string MobileMenuClass => $"md:hidden transition-all duration-300 ease-in-out {(IsMobileMenuOpen ? "block" : "hidden")} bg-white border-t border-gray-200";    private string GetActiveClass(string path)
    {
        var currentPath = Navigation.ToBaseRelativePath(Navigation.Uri);
        if (path == "/" && string.IsNullOrEmpty(currentPath))
            return "active";
        if (!string.IsNullOrEmpty(currentPath) && currentPath.StartsWith(path.TrimStart('/')))
            return "active";
        return "";
    }

    private void ToggleMobileMenu()
    {
        _isMobileMenuOpen = !_isMobileMenuOpen;
    }
}
