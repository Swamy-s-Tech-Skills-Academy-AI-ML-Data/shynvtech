<!-- Modern Glass Navbar with FontAwesome Icons -->
<nav class="navbar-glass fixed top-0 w-full z-50">
    <div class="container-custom px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between h-16">
            <!-- Logo -->
            <div class="flex items-center">
                <a href="/" class="text-2xl font-bold text-gradient">
                    ShyvnTech
                </a>
            </div>

            <!-- Desktop Navigation -->
            <div class="hidden md:flex space-x-8">
                <a class="nav-link-custom" href="/" title="Home">
                    <i class="fas fa-home mr-2"></i>
                    Home
                </a>

                <a class="nav-link-custom" href="/magazines" title="Magazines">
                    <i class="fas fa-book-open mr-2"></i>
                    Magazines
                </a>

                <a class="nav-link-custom" href="/events" title="Events">
                    <i class="fas fa-calendar-alt mr-2"></i>
                    Events
                </a>

                <a class="nav-link-custom" href="/learning" title="Learning">
                    <i class="fas fa-graduation-cap mr-2"></i>
                    Learning
                </a>

                <a class="nav-link-custom" href="/about" title="About">
                    <i class="fas fa-user-circle mr-2"></i>
                    About
                </a>

                <a class="nav-link-custom" href="/contact" title="Contact">
                    <i class="fas fa-envelope mr-2"></i>
                    Contact
                </a>
            </div>

            <!-- Mobile menu button -->
            <div class="md:hidden">
                <button @onclick="ToggleMobileMenu"
                    class="p-2 rounded-md text-gray-600 hover:text-gray-900 hover:bg-gray-100 transition duration-200">
                    <i class="fas fa-bars"></i>
                </button>
            </div>
        </div>

        <!-- Mobile Navigation -->
        <div class="@(_mobileMenuOpen ? "block" : "hidden") md:hidden mt-4 pb-4">
            <div class="flex flex-col space-y-2">
                <a class="mobile-nav-link" href="/" @onclick="CloseMobileMenu">
                    <i class="fas fa-home mr-3"></i>
                    Home
                </a>

                <a class="mobile-nav-link" href="/magazines" @onclick="CloseMobileMenu">
                    <i class="fas fa-book-open mr-3"></i>
                    Magazines
                </a>

                <a class="mobile-nav-link" href="/events" @onclick="CloseMobileMenu">
                    <i class="fas fa-calendar-alt mr-3"></i>
                    Events
                </a>

                <a class="mobile-nav-link" href="/learning" @onclick="CloseMobileMenu">
                    <i class="fas fa-graduation-cap mr-3"></i>
                    Learning
                </a>

                <a class="mobile-nav-link" href="/about" @onclick="CloseMobileMenu">
                    <i class="fas fa-user-circle mr-3"></i>
                    About
                </a>

                <a class="mobile-nav-link" href="/contact" @onclick="CloseMobileMenu">
                    <i class="fas fa-envelope mr-3"></i>
                    Contact
                </a>
            </div>
        </div>
    </div>
</nav>

@code {
    private bool _mobileMenuOpen = false;

    [Inject] private NavigationManager Navigation { get; set; } = default!;

    private void ToggleMobileMenu()
    {
        _mobileMenuOpen = !_mobileMenuOpen;
    }

    private void CloseMobileMenu()
    {
        _mobileMenuOpen = false;
    }
}
