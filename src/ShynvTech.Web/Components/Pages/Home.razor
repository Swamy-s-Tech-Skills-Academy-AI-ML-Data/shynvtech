@code {
    private int _currentSlide = 0;
    private readonly int _totalSlides = 6; // Total number of cards
    private readonly int _visibleCards = 3; // Cards visible at once on desktop

    private void NextSlide()
    {
        if (_currentSlide < _totalSlides - _visibleCards)
        {
            _currentSlide++;
        }
        else
        {
            _currentSlide = 0; // Loop back to start
        }
    }

    private void PreviousSlide()
    {
        if (_currentSlide > 0)
        {
            _currentSlide--;
        }
        else
        {
            _currentSlide = _totalSlides - _visibleCards; // Go to last possible position
        }
    }

    private void GoToSlide(int slideIndex)
    {
        _currentSlide = slideIndex;
    }

    private string GetCarouselTransform()
    {
        var translatePercentage = _currentSlide * (100.0 / _visibleCards);
        return $"translateX(-{translatePercentage:F1}%)";
    }

    private int GetMaxSlideIndex()
    {
        return Math.Max(0, _totalSlides - _visibleCards);
    }
}
