@page "/"
@using Microsoft.AspNetCore.Components.Web

<PageTitle>ShynvTech - Empowering College Students</PageTitle>

<!-- Hero Section -->
<section
    class="relative min-h-screen flex items-center justify-center bg-gradient-to-br from-shynv-600 via-shynv-700 to-shynv-800 overflow-hidden">
    <!-- Background Pattern -->
    <div class="absolute inset-0 bg-black/20"></div>
    <div class="absolute inset-0 opacity-10">
        <div class="w-full h-full bg-repeat"
            style="background-image: radial-gradient(circle, white 1px, transparent 1px); background-size: 20px 20px;">
        </div>
    </div>

    <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <div class="animate-fade-in">
            <h1 class="text-5xl md:text-7xl font-bold font-poppins text-white mb-6 leading-tight">
                Empowering
                <span class="text-transparent bg-clip-text bg-gradient-to-r from-yellow-400 to-orange-500">
                    College Students
                </span>
            </h1>
            <p class="text-xl md:text-2xl text-gray-200 mb-8 max-w-3xl mx-auto leading-relaxed">
                Your one-stop platform for monthly magazines, exciting events, comprehensive learning management system,
                and career growth resources.
            </p>

            <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-12">
                <a href="#features"
                    class="bg-white text-shynv-600 hover:bg-gray-100 font-semibold py-4 px-8 rounded-full text-lg transition-all duration-300 transform hover:scale-105 shadow-lg">
                    Explore Features
                </a>
                <a href="#about"
                    class="border-2 border-white text-white hover:bg-white hover:text-shynv-600 font-semibold py-4 px-8 rounded-full text-lg transition-all duration-300 transform hover:scale-105">
                    Learn More
                </a>
            </div>

            <!-- Stats -->
            <div class="grid grid-cols-2 md:grid-cols-4 gap-8 max-w-2xl mx-auto">
                <div class="text-center">
                    <div class="text-3xl font-bold text-white">50+</div>
                    <div class="text-gray-300">Magazine Issues</div>
                </div>
                <div class="text-center">
                    <div class="text-3xl font-bold text-white">200+</div>
                    <div class="text-gray-300">Events Hosted</div>
                </div>
                <div class="text-center">
                    <div class="text-3xl font-bold text-white">1000+</div>
                    <div class="text-gray-300">Students Reached</div>
                </div>
                <div class="text-center">
                    <div class="text-3xl font-bold text-white">24/7</div>
                    <div class="text-gray-300">LMS Access</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Scroll Indicator -->
    <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
        <i class="fas fa-chevron-down text-white text-2xl"></i>
    </div>
</section>

<!-- Features Section -->
<section id="features" class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
            <h2 class="text-4xl md:text-5xl font-bold font-poppins text-gray-900 mb-4">
                What We Offer
            </h2>
            <p class="text-xl text-gray-600 max-w-2xl mx-auto">
                Comprehensive resources and tools designed specifically for college students to excel in their academic
                and professional journey.
            </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
            <!-- Monthly Magazines -->
            <div class="group hover:transform hover:scale-105 transition-all duration-300">
                <div
                    class="bg-gradient-to-br from-blue-50 to-indigo-100 rounded-2xl p-8 h-full shadow-lg hover:shadow-xl transition-shadow duration-300">
                    <div
                        class="w-16 h-16 bg-gradient-to-br from-blue-500 to-indigo-600 rounded-2xl flex items-center justify-center mb-6 group-hover:rotate-12 transition-transform duration-300">
                        <i class="fas fa-book-open text-white text-2xl"></i>
                    </div>
                    <h3 class="text-2xl font-bold text-gray-900 mb-4">Monthly Magazines</h3>
                    <p class="text-gray-600 leading-relaxed">
                        Stay updated with the latest trends, career guidance, and educational content curated
                        specifically for college students.
                    </p>
                </div>
            </div>

            <!-- Events -->
            <div class="group hover:transform hover:scale-105 transition-all duration-300">
                <div
                    class="bg-gradient-to-br from-green-50 to-emerald-100 rounded-2xl p-8 h-full shadow-lg hover:shadow-xl transition-shadow duration-300">
                    <div
                        class="w-16 h-16 bg-gradient-to-br from-green-500 to-emerald-600 rounded-2xl flex items-center justify-center mb-6 group-hover:rotate-12 transition-transform duration-300">
                        <i class="fas fa-calendar-alt text-white text-2xl"></i>
                    </div>
                    <h3 class="text-2xl font-bold text-gray-900 mb-4">Exciting Events</h3>
                    <p class="text-gray-600 leading-relaxed">
                        Participate in workshops, seminars, competitions, and networking events designed to enhance your
                        skills and career prospects.
                    </p>
                </div>
            </div>

            <!-- LMS -->
            <div class="group hover:transform hover:scale-105 transition-all duration-300">
                <div
                    class="bg-gradient-to-br from-purple-50 to-violet-100 rounded-2xl p-8 h-full shadow-lg hover:shadow-xl transition-shadow duration-300">
                    <div
                        class="w-16 h-16 bg-gradient-to-br from-purple-500 to-violet-600 rounded-2xl flex items-center justify-center mb-6 group-hover:rotate-12 transition-transform duration-300">
                        <i class="fas fa-graduation-cap text-white text-2xl"></i>
                    </div>
                    <h3 class="text-2xl font-bold text-gray-900 mb-4">Learning Management</h3>
                    <p class="text-gray-600 leading-relaxed">
                        Access courses, track your progress, submit assignments, and collaborate with peers through our
                        comprehensive LMS platform.
                    </p>
                </div>
            </div>

            <!-- Resources -->
            <div class="group hover:transform hover:scale-105 transition-all duration-300">
                <div
                    class="bg-gradient-to-br from-orange-50 to-red-100 rounded-2xl p-8 h-full shadow-lg hover:shadow-xl transition-shadow duration-300">
                    <div
                        class="w-16 h-16 bg-gradient-to-br from-orange-500 to-red-600 rounded-2xl flex items-center justify-center mb-6 group-hover:rotate-12 transition-transform duration-300">
                        <i class="fas fa-lightbulb text-white text-2xl"></i>
                    </div>
                    <h3 class="text-2xl font-bold text-gray-900 mb-4">Career Resources</h3>
                    <p class="text-gray-600 leading-relaxed">
                        Get access to career guidance, job placement assistance, skill development programs, and
                        industry insights.
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- About Section -->
<section id="about" class="py-20 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid lg:grid-cols-2 gap-12 items-center">
            <div>
                <h2 class="text-4xl md:text-5xl font-bold font-poppins text-gray-900 mb-6">
                    About ShynvTech
                </h2>
                <p class="text-lg text-gray-600 mb-6 leading-relaxed">
                    ShynvTech is dedicated to empowering college students with the tools, resources, and opportunities
                    they need to succeed in their academic and professional journeys.
                </p>
                <p class="text-lg text-gray-600 mb-8 leading-relaxed">
                    We believe that every student deserves access to quality educational content, networking
                    opportunities, and career guidance. Our platform brings together the best of technology and
                    education to create a comprehensive ecosystem for student success.
                </p>
                <a href="#contact"
                    class="inline-flex items-center bg-shynv-600 hover:bg-shynv-700 text-white font-semibold py-3 px-6 rounded-lg transition-colors duration-300">
                    Get in Touch
                    <i class="fas fa-arrow-right ml-2"></i>
                </a>
            </div>
            <div class="relative">
                <div
                    class="aspect-square bg-gradient-to-br from-shynv-400 to-shynv-600 rounded-3xl flex items-center justify-center">
                    <i class="fas fa-users text-white text-8xl"></i>
                </div>
                <div
                    class="absolute -top-6 -right-6 w-24 h-24 bg-yellow-400 rounded-full flex items-center justify-center">
                    <i class="fas fa-star text-white text-2xl"></i>
                </div>
                <div
                    class="absolute -bottom-6 -left-6 w-20 h-20 bg-green-400 rounded-full flex items-center justify-center">
                    <i class="fas fa-rocket text-white text-xl"></i>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Contact Section -->
<section id="contact" class="py-20 bg-shynv-600">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-4xl md:text-5xl font-bold font-poppins text-white mb-6">
            Ready to Get Started?
        </h2>
        <p class="text-xl text-gray-200 mb-8 max-w-2xl mx-auto">
            Join thousands of students who are already benefiting from our platform. Start your journey with ShynvTech
            today.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
            <a href="mailto:info@shynvtech.com"
                class="bg-white text-shynv-600 hover:bg-gray-100 font-semibold py-4 px-8 rounded-full text-lg transition-all duration-300 transform hover:scale-105">
                Contact Us
            </a>
            <a href="#"
                class="border-2 border-white text-white hover:bg-white hover:text-shynv-600 font-semibold py-4 px-8 rounded-full text-lg transition-all duration-300 transform hover:scale-105">
                Join Our Community
            </a>
        </div>
    </div>
</section>

<style>
    .animate-fade-in {
        animation: fadeIn 1s ease-in;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    html {
        scroll-behavior: smooth;
    }
</style>

   
           
        
               
                   
                   
               
                   
                       
                       
                   
                       
                       
                   
                       
                       
                   
                       
                       
                   
                   
                   
                   
                   
                   
                   
           
               
               
           
           
       

           
