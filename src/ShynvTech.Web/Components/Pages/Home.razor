@page "/"

<PageTitle>ShynvTech - Tech Innovation Collective</PageTitle>

<!-- Hero Section -->
<section
    class="relative min-h-screen flex items-center justify-center bg-gradient-to-br from-shynv-600 via-shynv-700
    to-shynv-800 overflow-hidden">
    <!-- Background Pattern -->
    <div class="absolute inset-0 bg-black/20"></div>
    <div class="absolute inset-0 opacity-10">
        <div class="w-full h-full bg-repeat"
            style="background-image: radial-gradient(circle, white 1px, transparent 1px); background-size: 20px 20px;">
        </div>
    </div>

    <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <div class="animate-fade-in">
            <h1 class="text-5xl md:text-7xl font-bold font-poppins text-white mb-6 leading-tight">
                Tech Innovation
                <span class="text-transparent bg-clip-text bg-gradient-to-r from-yellow-400 to-orange-500">
                    Collective
                </span>
            </h1>
            <p class="text-xl md:text-2xl text-gray-200 mb-8 max-w-3xl mx-auto leading-relaxed">
                A platform for software professionals, community builders, and continuous learners.
                Showcasing expertise, mentorship, and technical innovation powered by Azure Cloud architecture.
            </p>

            <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-12">
                <a href="#features"
                    class="bg-white text-shynv-600 hover:bg-gray-100 font-semibold py-4 px-8 rounded-full text-lg transition-all duration-300 transform hover:scale-105 shadow-lg">
                    Explore Platform
                </a>
                <a href="#about"
                    class="border-2 border-white text-white hover:bg-white hover:text-shynv-600 font-semibold py-4 px-8 rounded-full text-lg transition-all duration-300 transform hover:scale-105">
                    About Swamy
                </a>
            </div>

            <!-- Stats -->
            <div class="grid grid-cols-2 md:grid-cols-4 gap-8 max-w-2xl mx-auto">
                <div class="text-center">
                    <div class="text-3xl font-bold text-white">Azure</div>
                    <div class="text-gray-300">Cloud Architect</div>
                </div>
                <div class="text-center">
                    <div class="text-3xl font-bold text-white">Build 2025</div>
                    <div class="text-gray-300">Microsoft Proctor</div>
                </div>
                <div class="text-center">
                    <div class="text-3xl font-bold text-white">AWS</div>
                    <div class="text-gray-300">Community Builder</div>
                </div>
                <div class="text-center">
                    <div class="text-3xl font-bold text-white">AI/ML</div>
                    <div class="text-gray-300">Innovation</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Scroll Indicator -->
    <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
        <i class="fas fa-chevron-down text-white text-2xl"></i>
    </div>
</section>
